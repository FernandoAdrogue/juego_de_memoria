---
import Layout from '../layouts/Layout.astro';

const translations = {
    firebaseInitSuccess: 'Firebase se ha inicializado correctamente.',
    firebaseInitError: 'Error al inicializar Firebase.',
    firebaseNotConfigured: 'Firebase no está configurado.',
    configureFirebaseRanking: 'Configura Firebase para ver el ranking.',
    loadRankingError: 'Error al cargar el ranking.',
    beTheFirstToPlay: '¡Sé el primero en jugar!',
    noRecordsYet: 'Aún no hay registros.',
    firebaseNotSetUp: 'Firebase no está configurado. El ranking no se mostrará.',
    completeAllFields: 'Por favor, completa todos los campos.',
    enterValidEmail: 'Por favor, introduce un email válido.',
    saveError: 'Error al guardar. Inténtalo de nuevo.',
    saveScoreError: 'Error al guardar la puntuación.',
    gameCompleted: '¡Juego Completado!',
    scoreLabel: 'Puntuación',
    timeScoreLabel: 'Tiempo',
    movesScoreLabel: 'Movimientos',
};
---

<Layout title="Concentrate y Gana">
    <!-- LANDING PAGE -->
    <div class="landing-page" id="landingPage">
        <div class="landing-header">
            <h1>🎮 Concentrate y Gana</h1>
            <p>Un juego de memoria para tu evento</p>
        </div>

        <div class="landing-content">
            <!-- Sección del QR -->
            <div class="qr-section">
                <h2>📱 Juega Ahora</h2>
                <p>Escanea el código QR para empezar a jugar</p>
                <div id="qrcode"></div>
                <div class="game-url" id="gameUrl">Cargando URL...</div>
            </div>

            <!-- Sección del Ranking -->
            <div class="ranking-section">
                <h2>🏆 Ranking de Jugadores</h2>
                
                <div class="podium" id="podium">
                    <div class="loading">Cargando podio...</div>
                </div>

                <div class="ranking-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Pos.</th>
                                <th>Jugador</th>
                                <th>Puntuación</th>
                                <th>Tiempo</th>
                            </tr>
                        </thead>
                        <tbody id="rankingBody">
                            <tr>
                                <td colspan="4" class="loading">Cargando ranking...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- PÁGINA DEL JUEGO -->
    <div class="game-page" id="gamePage">
        <div class="container">
            <h1>🎮 Concentrate y Gana</h1>
            
            <div class="setup-instructions" id="setupInstructions" style="display: none;">
                <h3>⚙️ Instrucciones de Configuración</h3>
                <ol>
                    <li>Ve a tu consola de Firebase.</li>
                    <li>Crea un nuevo proyecto o selecciona uno existente.</li>
                    <li>Añade una aplicación web y copia la configuración.</li>
                    <li>Crea un archivo .env en la raíz de tu proyecto.</li>
                    <li>Pega tus variables de Firebase en el archivo .env.</li>
                </ol>
            </div>
            
            <div class="form-section active" id="formSection">
                <div id="errorMessage" class="error-message" style="display: none;"></div>
                
                <div class="form-group">
                    <label for="playerName">Tu Nombre</label>
                    <input type="text" id="playerName" required placeholder="Introduce tu nombre">
                </div>
                <div class="form-group">
                    <label for="playerEmail">Tu Email</label>
                    <input type="email" id="playerEmail" required placeholder="Introduce tu email">
                </div>
                <button onclick="startGame()">Empezar Juego</button>
                <button onclick="backToLanding()">Ver Ranking</button>
            </div>
            
            <div class="game-section" id="gameSection">
                <div class="game-info">
                    <div class="info-item">
                        <div class="info-label">Tiempo</div>
                        <div class="info-value" id="timer">0:00</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Movimientos</div>
                        <div class="info-value" id="moves">0</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Parejas</div>
                        <div class="info-value" id="matches">0/8</div>
                    </div>
                </div>
                
                <div class="cards-grid" id="cardsGrid"></div>
                
                <button onclick="resetGame()">Reiniciar Juego</button>
                <button onclick="backToLanding()">Ver Ranking</button>
            </div>
            
            <div class="results-section" id="resultsSection">
                <div id="finalScoreDiv"></div>
                <button onclick="backToStart()">Jugar de Nuevo</button>
                <button onclick="backToLanding()">Ver Ranking</button>
            </div>
        </div>
    </div>

    <!-- QR Code Library -->
    <script src="https://cdn.jsdelivr.net/gh/davidshimjs/qrcodejs/qrcode.min.js"></script>
    
    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore-compat.js"></script>

    <script define:vars={{ translations }}>
        window.translations = translations;
    </script>

    <script type="module" src="/scripts/firebase-config.js"></script>
    <script src="/scripts/game.js"></script>
</Layout>
